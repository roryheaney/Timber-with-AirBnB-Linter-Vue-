<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
    <header>
        <h2 class="entry-title"><a href="{{ post.link }}">{{ post.title }}</a></h2>
        {% include "blocks/posts/entry-meta.twig" %}
    </header>
    <div class="entry-summary">
        {{ post.post_excerpt }}
    </div>
</article>
